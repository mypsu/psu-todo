<h1>Listing users</h1>

<table id="users">
  <thead>
  <tr>
    <th>Username</th>
    <th></th>
     <th></th>
  </tr>
 </thead>
 <tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, user %></td>

    <% if current_user == user  %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    <% else %>
      <td></td><td></td>
    <% end %>


  </tr>
<% end %>
   </tbody>

</table>


<br />

<%= link_to 'New User', new_user_path %>
