<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  
  
<table border="0">
<tr>
<td>Project: </td>
<td><%= f.collection_select(:project_id, Project.all, :id, :name, {:prompt=>"Select"}) %>

  <% if @task.project_id? %>
  <h3>..</h3> 
    <% else %>
  <h3>no projects</h3>
    <% end %>


  </div></td>
</tr>
</table 
  
  
  
  Project:
    <%= f.collection_select(:project_id, Project.all, :id, :name, {:prompt=>"Select"}) %>

  <% if @task.project_id? %>
  <h3>..</h3> 
    <% else %>
  <h3>no projects</h3>
    <% end %>


  </div>

  <div class="field">
  Project Description:
    <%= f.text_field :description %>
  </div>


  <div class="field">
    Task Completed?
    <%= f.select :completed, [['No','NO'],['Yes','YES']] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
