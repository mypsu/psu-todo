<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Project ID</th>
    <th>Completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.description, task %></td>
    <td><%= task.project_id %></td>
    <td><%= task.completed %></td> 
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure you want to delete task: ' + task.description  } %></td>
  </tr>
<% end %>
</table>

